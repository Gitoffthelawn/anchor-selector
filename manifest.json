{
  "manifest_version": 2,
  "name": "Anchor Selector",
  "version": "0.1",
  "description": "Select link anchor element",
  "icons": {
    "48": "icons/anchor-selector.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["main.js"],
      "css": ["overlay.css"]
    }
  ],
  "page_action": {
    "default_icon": "icons/anchor-selector.svg",
    "default_title": "Anchor Selector",
    "show_matches": ["<all_urls>"]
  }
}
