{
  "name": "@bgpat/anchor-selector",
  "version": "0.7.11",
  "description": "The web-extension to select anchor element.",
  "scripts": {
    "start": "webpack -w",
    "build": "webpack",
    "test": "web-ext lint",
    "publish": "npm run publish:chrome && npm run publish:firefox",
    "publish:firefox": "web-ext-submit --api-key=$JWT_ISSUER --api-secret=$JWT_SECRET",
    "publish:chrome": "chrome-webstore-upload upload --source web-ext-artifacts/* --auto-publish",
    "preversion": "dot-json manifest.json version $npm_package_version && git add manifest.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgpat/anchor-selector.git"
  },
  "keywords": [
    "webextension",
    "firefox-addon"
  ],
  "author": "bgpat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bgpat/anchor-selector/issues"
  },
  "homepage": "https://github.com/bgpat/anchor-selector#readme",
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@babel/eslint-parser": "7.15.8",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.15.8",
    "@bgpat/webext-webpack-plugin": "0.1.8",
    "@zeit/eslint-config-node": "0.3.0",
    "babel-loader": "8.2.3",
    "canvas": "2.8.0",
    "chrome-webstore-upload-cli": "2.0.1",
    "color": "4.0.1",
    "core-js": "3.19.0",
    "dot-json": "1.2.2",
    "eslint": "7.32.0",
    "eslint-webpack-plugin": "3.1.0",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "prettier": "2.4.1",
    "sass-loader": "12.3.0",
    "terser-webpack-plugin": "^5.2.4",
    "web-ext": "6.5.0",
    "web-ext-submit": "6.5.0",
    "webextension-polyfill": "0.8.0",
    "webpack": "5.60.0",
    "webpack-cli": "4.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
